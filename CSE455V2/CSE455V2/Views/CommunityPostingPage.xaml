<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CSE455V2.Views.CommunityPostingPage"
             Title="Community Postings"
             BackgroundColor="White">
    <ContentPage.Content>
      <ScrollView>
        <StackLayout>
            <Label Text="Messages" TextColor="Black" FontAttributes="Bold" FontSize="18"
               Margin="0,45,0,0"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start" />
            <Frame OutlineColor="Black"
                   BackgroundColor="GhostWhite"
               Margin="10,20,10,0"
               WidthRequest="500"
               HeightRequest="500"
                   BorderColor="Black"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start">
                <ScrollView HorizontalOptions="Start"
                        VerticalOptions="Start">
                    <StackLayout x:Name="messageList"
                             HorizontalOptions="Start"
                             VerticalOptions="Start">
                    </StackLayout>
                </ScrollView>
            </Frame>

               
            <Entry x:Name="messageEntry"
               Placeholder="Type Message Here"
                   BackgroundColor="GhostWhite"
                   TextColor="Black"
               WidthRequest="500"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start" />
            <Button x:Name="sendButton"
                IsEnabled="False"
                Text="Send Message"
                    TextColor="Black"
                    Margin="10"
                WidthRequest="500"
                    HeightRequest="75"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Start"
                Clicked="SendButton_ClickedAsync"
                    BorderColor="Black" 
                    BorderWidth="4" 
                    BackgroundColor="#0077be"/>
            <Button x:Name="connectButton"
                Text="Connect to Server"
                    TextColor="Black"
                    Margin="10"
                WidthRequest="500"
                    HeightRequest="75"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End"
                Clicked="ConnectButton_ClickedAsync" 
                    BorderColor="Black" 
                    BorderWidth="4" 
                    BackgroundColor="LightGray"/>
                <Label Text="Connect to server before sending message!" TextColor="Black" FontAttributes="Bold" FontSize="14"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="Start" />

            </StackLayout>
      </ScrollView>
    </ContentPage.Content>
</ContentPage>
    